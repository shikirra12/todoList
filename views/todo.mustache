
      <form class="addTask" action="/create" method="post">
        <input type="text" name="addTask">
        <button type="submit">Submit</button>
      </form>

      <h1>To Do</h1>
      {{#toDo}}
      <form class="doTask" action="/complete/{{id}}" method="post">
        <button type="submit">{{text}}</button>
      </form>
      {{/toDo}}

      <h1>Completed</h1>
      {{#complete}}
      {{text}}
      {{/complete}}
